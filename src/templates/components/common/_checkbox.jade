mixin checkbox(obj)
	-obj = obj ? obj : {}
	label(block="ui-checkbox" mod=obj.mod class=obj?obj.className:null)
		input.visuallyhidden(elem="input" type="checkbox")&attributes(attributes)
		i(elem="icon")
		if block
			span(elem="text")
				block

